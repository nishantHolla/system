
# XDG Paths

export XDG_CONFIG_HOME=$HOME/.config
export XDG_CACHE_HOME=$HOME/.cache
export XDG_DATA_HOME=$HOME/.local/share

# user

export GMAIL_ID="nishantholla19@gmail.com"
export GITHUB_NAME="nishantHolla"

# applications

export EDITOR="nvim"
export TERMINAL="alacritty"
export BROWSER="firefox"
export FILE_MANAGER="pcmanfm"
export CLI_FILE_MANAGER="lf"
export PDF_VIEWER="zathura"
export IMAGE_VIEWER="vimiv"
export VIDEO_VIEWER="mpv"
export NVM_DIR="${XDG_CONFIG_HOME}/nvm"

# zsh

export ZDOTDIR=$XDG_CONFIG_HOME/zsh

# starship

export STARSHIP_CONFIG=$XDG_CONFIG_HOME/starship/starship.toml

# path

export PATH=$PATH:$HOME/Bin

# git

export GIT_CONFIG_GLOBAL=$HOME/.config/git/.gitconfig

# fzf

export FZF_KEYBINDINGS="alt-j:down,alt-k:up,alt-l:accept,alt-h:cancel"

# C lang

export CC="/usr/bin/clang"
export CXX="/usr/bin/clang++"

# android

export ANDROID_HOME="$HOME/Applications/android/sdk"
export PATH=$PATH:$ANDROID_HOME
export PATH=$PATH:$ANDROID_HOME/emulator
export PATH=$PATH:$ANDROID_HOME/platform-tools

# sources

source ~/.xprofile_secrets
